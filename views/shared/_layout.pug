block variables

doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='')

        title OAuth 2.0 Test Client - #{title}

        // Core theme CSS (includes Bootstrap)
        link(href='/css/styles.css', rel='stylesheet')
        link(href='/css/bootstrap-icons.css', rel='stylesheet')

    body

        // Responsive navbar
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            .container
                a.navbar-brand(href='/') OAuth 2.0 Test Client
                button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.ms-auto.mb-2.mb-lg-0
                        li.nav-item
                            if navLink == 'home'
                                a.nav-link.active(aria-current='page', href='/') Home
                            else 
                                a.nav-link(aria-current='page', href='/') Home
                        li.nav-item
                            if navLink == 'terminology'
                                a.nav-link.active(aria-current='page', href='/terminology') Terminology
                            else 
                                a.nav-link(aria-current='page', href='/terminology') Terminology

        // Page content
        .container
            block content

        // Bootstrap core JS
        script(src='/js/bootstrap.bundle.min.js')
